# Contributor:Mike Redd <mredd -at- 0 tue 0 dot com>
# Maintainer: Mike Redd <mredd -at- 0 tue 0 dot com>

pkgname=crosstool-ng-linaro
pkgver=2013.05
pkgrel=1
pkgdesc='Crosstool - Linaro Toolchain Binaries'
arch=('i686' 'x86_64')
url='https://launchpad.net/linaro-toolchain-binaries/trunk/2013.05/+download'
license=(GPL)
depends=('make' 'gperf' 'wget')
source=(${url}/${pkgname}-1.13.1-4.8-${pkgver}.tar.bz2)
md5sums=('8a50333f415026f573f22e11cccde7dc')

build() {
  cd "$srcdir"/${pkgname}-1.13.1-4.8-${pkgver}
  ./configure --prefix=/opt/toolchains/crosstool-ng-linaro --with-install=`which install` --with-make=`which make` --with-grep=`which grep` --with-sed=`which sed` --with-bash=`which bash` --bindir=${HOME}/bin
  make -j1
}

package() {
  cd "$srcdir"/${pkgname}-1.13.1-4.8-${pkgver}
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
