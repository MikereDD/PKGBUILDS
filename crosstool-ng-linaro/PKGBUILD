# Maintainer: Mike Redd <mredd -at- 0 tue 0 dot com>

pkgname=crosstool-ng-linaro
pkgver=20130221
pkgrel=1
pkgdesc='Crosstool - Linaro Toolchain Binaries'
arch=('any')
url='https://launchpad.net/linaro-toolchain-binaries/+download'
license=(GPL)
depends=('make' 'gperf' 'wget')
source=(https://launchpad.net/linaro-toolchain-binaries/trunk/2013.02/+download/$pkgname-1.13.1-4.7-2013.02-01-$pkgver.tar.bz2)
md5sums=('4b32164d77e6a598416596c3f6820186')

build() {
  cd "$srcdir"/${pkgname}-1.13.1-4.7-2013.02-01-${pkgver}
  ./configure --prefix=/usr
  make -j1
}

package() {
  cd "$srcdir"/${pkgname}-1.13.1-4.7-2013.02-01-${pkgver}
  make DESTDIR="$pkgdir" install
}

